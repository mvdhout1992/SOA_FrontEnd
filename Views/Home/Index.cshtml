@model SOA_FrontEnd.PaymentValidationReference.PaymentType

@{
    ViewBag.Title = "Form";
}

<div class="panel panel-success">
    <div class="panel-heading text-center"><h4>RSVP</h4></div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                <label>Card name:</label>
                @Html.TextBoxFor(x => x.CardName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Authorization amount:</label>
                @Html.TextBoxFor(x => x.AuthorizationAmount, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Card Number:</label>
                @Html.TextBoxFor(x => x.CardNum, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>AuthorizationAmountSpecified</label>
                @Html.DropDownListFor(x => x.AuthorizationAmountSpecified, new[] {
                new SelectListItem() { Text = "true",
                    Value = bool.TrueString },
                new SelectListItem() { Text = "false",
                    Value = bool.FalseString }
            }, "Choose an option", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>AuthorizationDateSpecified</label>
                @Html.DropDownListFor(x => x.AuthorizationDateSpecified, new[] {
                new SelectListItem() { Text = "true",
                    Value = bool.TrueString },
                new SelectListItem() { Text = "false",
                    Value = bool.FalseString }
            }, "Choose an option", new { @class = "form-control" })
            </div>
            <div class="text-center">
                <input class="btn btn-success" type="submit" value="Submit RSVP" />
            </div>
        }
    </div>
</div>
